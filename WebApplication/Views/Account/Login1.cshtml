@model WebApplicationLogic.Catalog.Users.Dto.LoginRequest

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutSideBar.cshtml";
    var culture = CultureInfo.CurrentCulture.Name;
}




<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <h2>Login to your account</h2>
                    @Html.ValidationSummary(false)
                    <form asp-controller="Account" asp-action="Login1" method="post" name = "myForm" onsubmit = "return(validate());">
                        <input type="text" name="userName" asp-for="UserName" placeholder="User Name" />@Html.ValidationMessageFor(model => model.UserName)

                        <input type="password"  name="password" asp-for="Password" placeholder="Password" /> @Html.ValidationMessageFor(model => model.Password)

                        <div>
                            <span>
                                <input type="checkbox" class="checkbox">
                                Keep me signed in
                            </span>
                        </div>
                        <button type="submit" class="btn btn-default">Login</button>
                        <div>
                            <a href="/@culture/Account/ForgotPassword"> Quên mật khẩu ?</a>
                        </div>
                    </form>
                </div><!--/login form-->
            </div>


        </div>
    </div>
</section><!--/form-->
