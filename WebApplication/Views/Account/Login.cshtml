@model WebApplicationLogic.Catalog.Users.Dto.LoginRequest

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutSideBar.cshtml";
    var culture = CultureInfo.CurrentCulture.Name;
}




<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <h2>Login to your account</h2>
                @Html.ValidationSummary(true,"", new {@class ="text-danger"})
                    <form asp-controller="Account" asp-action="Login" method="post">
                        <input type="text" asp-for="UserName" placeholder="User Name" />
                        @Html.ValidationMessageFor(model => model.UserName, " ", new { @class = "text-danger" })
                        <input type="password" asp-for="Password" placeholder="Password" />
                        @Html.ValidationMessageFor(model => model.Password, " ", new { @class = "text-danger" })
                        <span>
                            <input type="checkbox" class="checkbox">
                            Keep me signed in
                        </span>
                        <button type="submit" class="btn btn-default">Login</button>
                        <a href="/@culture/Account/ForgotPassword"> Quên mật khẩu ?</a>
                    </form>
                </div><!--/login form-->
            </div>
            
            
        </div>
    </div>
</section><!--/form-->
