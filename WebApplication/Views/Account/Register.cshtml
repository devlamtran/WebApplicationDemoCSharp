@model WebApplicationLogic.Catalog.Users.Dto.RegisterRequest
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutSideBar.cshtml";
    var culture = CultureInfo.CurrentCulture.Name;
}
<div class="col-sm-4">
    <div class="signup-form">
        <!--sign up form-->
        <h2>New User Signup!</h2>
         
        
        <form asp-controller="Account" asp-action="Register" method="post">
             <input type="text" asp-for="FirstName" placeholder="FirstName" />
             <input type="text" asp-for="LastName" placeholder="LastName" />
             <input type="date" asp-for="Dob" placeholder="day of birth" />

            <input type="email" asp-for="Email" placeholder="Email Address" />
            <input type="text" asp-for="UserName" placeholder="UserName" />

            <input type="password" asp-for="Password" placeholder="Password" />
            <input type="password" asp-for="ConfirmPassword" placeholder="ConfirmPassword Password" />
            <input type="text" asp-for="PhoneNumber" placeholder="Phone" />

            <button type="submit" class="btn btn-default">Signup</button>
        </form>
    </div><!--/sign up form-->
</div>