@{
    ViewBag.Title = "OrderUser";
    Layout = "~/Views/Shared/_LayoutSideBar.cshtml";

}
@using WebApplicationLogic.Dtos
@model PageResult<WebApplicationLogic.Catalog.Sales.Dto.OrderViewModel>


<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Danh sách Hóa đơn</h1>
    

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
           
        </div>
        <div class="card-body">
            <div class="table-responsive cart_info">
                <table class="table table-condensed" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Tên</th>
                            <th>Số điện thoại</th>
                            <th>Email</th>
                            <th>Ngày Order</th>
                            <th>Trạng thái</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Tên</th>
                            <th>Số điện thoại</th>
                            <th>Email</th>
                            <th>Ngày Order</th>
                            <th>Trạng thái</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.ShipName) </td>
                                <td>@Html.DisplayFor(modelItem => item.ShipPhoneNumber)</td>
                                <td>@Html.DisplayFor(modelItem => item.ShipEmail)</td>
                                <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
                                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                                <td>
                                    |
                                    @Html.ActionLink("Xem đơn hàng", "Details", new { id = item.Id })
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @await Component.InvokeAsync("PagerAdmin", Model)
        </div>
    </div>

</div>










